{% for flashMessage in app.session.flashbag.get('success') %}
    <div class="alert alert-success alert-dismissible alert-full fade in">
        <button class="close" data-dismiss="alert">&times;</button>
        <div class="container-fluid">
            {% include '_partials/icon.html.twig' with {'name': 'ok-sign', 'class': 'icon-offset'} %}
            {{ flashMessage|raw }}
        </div>
    </div>
{% endfor %}

{% for flashMessage in app.session.flashbag.get('error') %}
    <div class="alert alert-error alert-dismissible alert-full fade in">
        <button class="close" data-dismiss="alert">&times;</button>
        <div class="container-fluid">
            {% include '_partials/icon.html.twig' with {'name': 'warning-sign', 'class': 'icon-offset'} %}
            {{ flashMessage|raw }}
        </div>
    </div>
{% endfor %}
